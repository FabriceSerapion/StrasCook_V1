{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/error.css">
{% endblock %}
{% block content %}
    {% for error in errors %}
        <div class='error'>
            {{error}}
        </div>
    {% endfor %}

	<form method="post">
		<input type="hidden" value="{{ tag.id }}" name="id">
		<div class="form-group my-4">
			<label for="name_tag">Nom du Tag</label>
			<input class="form-control" type="text" value="{{ tag.name_tag }}" name="name_tag" id="name_tag">
		</div>
		<div class="d-flex justify-content-center">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</form>
{% endblock %}
