{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/menus.css">
{% endblock %}

{% block content %}


	<main>

		<section class="py-5 text-center container">
			<div class="row py-lg-5">
				<div class="col-lg-6 col-md-8 mx-auto">
					<h1 class="fw-light">Voici tous nos menus</h1>
					<p class="lead text-muted">N'hésitez pas à cliquer sur un menu pour en savoir plus sur sa composition</p>
				</div>
			</div>
		</section>

		<div class="album py-5 bg-light">
			<div class="container">
				<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-3">

					{% for menu in menus %}

						<div class="col">
							<div class="card shadow-sm">
								<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: image-menu" preserveaspectratio="xMidYMid slice" focusable="false">
									<title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Image menu</text>
								</svg>
								<div class="card-body">
									<div class="d-flex justify-content-between">
										<h4 class="card-text">{{menu.name_menu}}</h4>
										<div class="stars-notation">
											<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewbox="0 0 16 16">
												<path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
											</svg>
										</div>
									</div>
									<div class=" d-flex justify-content-start">
										{% for key, tag in menu["tags"] %}
											{% if key <4 %}
												<div class="tag-container mb-2 me-2">
													{{tag.name_tag}}
												</div>
											{% endif %}
										{% endfor %}
										{% if menu["tags"]|length > 4 %}
											...
										{% endif %}
									</div>
									<div class="d-flex justify-content-between align-items-center">
										<div class="btn-group">
											<button type="button" class="btn btn-sm btn-outline-secondary">Ajouter au panier</button>
											<button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#modal_{{menu.id}}">Voir ce menu</button>

											{# modal #}
											<div class="modal fade" id="modal_{{menu.id}}" tabindex="-1" role="dialog" aria-labelledby="modal_{{menu.id}}Title" aria-hidden="true">
												<div class="modal-dialog modal-dialog-centered" role="document">
													<div class="modal-content">
														<div class="modal-header">
															<h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
															<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
																<span aria-hidden="true">&times;</span>
															</button>
														</div>
														<div class="modal-body">
															<h4 class="card-text">{{menu.name_menu}}</h4>
														</div>
														<div class="modal-footer">
															<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
														</div>
													</div>
												</div>
											</div>

										</div>
										<small class="text-muted ms-4">{{menu.price_menu}}
											€/ personne</small>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</main>
{% endblock %}
